<h2>Select Shipping Address</h2>

<div class='clearfix'>
<%= form_tag admin_shopping_checkout_shipping_addresses_path do %>

  <% @shipping_addresses.each_with_index do |shipping_address, i| %>
    <% selected = session_admin_order.ship_address_id == shipping_address.id %>
    <div  id='select-address-<%= i %>'
          class='panel callout five large-5 columns <%= 'address_selected' if selected %>'>
      <%= render partial: '/shared/compact_address', locals: { shopping_address: shipping_address } %>
      <%= link_to 'Use', select_address_admin_shopping_checkout_shipping_address_path(shipping_address), method: 'put' %> |
      <%= link_to 'Edit', new_admin_shopping_checkout_shipping_address_path(:old_address_id => shipping_address.id) %>
    </div>
  <% end %>
<% end %>
</div>
<br />

<%= link_to 'New Shipping address', new_admin_shopping_checkout_shipping_address_path, class: 'button' %>
